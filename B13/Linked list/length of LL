/**
 * class LLNode {
 *     public:
 *         int val;
 *         LLNode *next;
 * };
 */
int solve(LLNode* node) {
    int n=0;
    while(node)
    {
        n++;
        node=node->next;
    }
return n;
}

# class LLNode:
#     def __init__(self, val, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def solve(self, node):
        n=0
        while node:
            node=node.next
            n+=1
        return n

 class LLNode:
#     def __init__(self, val, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def solve(self, node):
        if node:
            return 1+self.solve(node.next)
        return 0

        
